(fboundp 'face-id)
(face-id 'default)
(condition-case err
    (face-id 1)
  (error (car err)))
(condition-case err
    (face-id 'unknown-face)
  (error (car err)))
(condition-case err
    (face-id)
  (error (car err)))

(fboundp 'face-font)
(face-font 'default)
(condition-case err
    (face-font 1)
  (error (car err)))
(condition-case err
    (face-font 'unknown-face)
  (error (car err)))
(condition-case err
    (face-font)
  (error (car err)))
