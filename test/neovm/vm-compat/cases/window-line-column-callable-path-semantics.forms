(mapcar (lambda (s) (list s (fboundp s) (subr-arity (symbol-function s))))
        '(window-left-column window-top-line))

(integerp (funcall #'window-left-column nil))
(integerp (apply #'window-left-column '(nil)))
(let ((fn (indirect-function 'window-left-column)))
  (integerp (funcall fn nil)))

(integerp (funcall #'window-top-line nil))
(integerp (apply #'window-top-line '(nil)))
(let ((fn (indirect-function 'window-top-line)))
  (integerp (funcall fn nil)))

(let ((w (split-window)))
  (delete-window w)
  (list (condition-case err (funcall #'window-left-column w) (error (car err)))
        (condition-case err (funcall #'window-top-line w) (error (car err)))))

(list (condition-case err (funcall #'window-left-column 999999) (error (car err)))
      (condition-case err (apply #'window-left-column '(999999)) (error (car err)))
      (condition-case err (funcall #'window-top-line 999999) (error (car err)))
      (condition-case err (apply #'window-top-line '(999999)) (error (car err))))

(list (condition-case err (funcall #'window-left-column nil nil) (error (car err)))
      (condition-case err (apply #'window-left-column '(nil nil)) (error (car err)))
      (condition-case err (funcall #'window-top-line nil nil) (error (car err)))
      (condition-case err (apply #'window-top-line '(nil nil)) (error (car err))))
