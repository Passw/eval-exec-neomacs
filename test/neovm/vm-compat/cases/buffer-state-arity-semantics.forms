; Lock in zero-arity contracts for buffer state helpers.
(fboundp 'erase-buffer)
(fboundp 'widen)
(fboundp 'current-time)

(with-temp-buffer
  (insert "abc")
  (erase-buffer)
  (buffer-string))

(with-temp-buffer
  (insert "abcdef")
  (narrow-to-region 2 4)
  (widen)
  (list (point-min) (point-max)))

(let ((tm (current-time)))
  (and (listp tm)
       (= (length tm) 3)
       (integerp (nth 0 tm))
       (integerp (nth 1 tm))
       (integerp (nth 2 tm))))

(condition-case err (erase-buffer nil) (error (car err)))
(condition-case err (widen nil) (error (car err)))
(condition-case err (current-time nil) (error (car err)))
