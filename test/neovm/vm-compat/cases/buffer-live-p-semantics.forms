; Buffer liveness semantics and core error shape.

(fboundp 'buffer-live-p)

(let ((b (get-buffer-create " *buffer-live-p*")))
  (prog1
      (buffer-live-p b)
    (kill-buffer b)))

(let ((b (get-buffer-create " *buffer-live-p-killed*")))
  (kill-buffer b)
  (buffer-live-p b))

(buffer-live-p "*scratch*")
(buffer-live-p nil)

(condition-case err
    (buffer-live-p)
  (wrong-number-of-arguments (car err)))
