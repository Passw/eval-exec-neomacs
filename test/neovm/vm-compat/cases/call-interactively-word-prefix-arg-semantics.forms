; call-interactively should consume current-prefix-arg for word case commands.

(with-temp-buffer
  (insert "ab cd ef")
  (goto-char 1)
  (let ((current-prefix-arg 2))
    (call-interactively 'upcase-word)
    (buffer-string)))

(with-temp-buffer
  (insert "ab cd ef")
  (goto-char 1)
  (let ((current-prefix-arg 2))
    (command-execute 'upcase-word)
    (buffer-string)))

(with-temp-buffer
  (insert "ab cd ef")
  (goto-char 7)
  (let ((current-prefix-arg '-))
    (call-interactively 'capitalize-word)
    (buffer-string)))

(with-temp-buffer
  (insert "ab cd ef")
  (goto-char 7)
  (let ((current-prefix-arg '-))
    (command-execute 'capitalize-word)
    (buffer-string)))
