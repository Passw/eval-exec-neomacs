(progn
  (setq vm-default-watch-events nil)
  (fset 'vm-default-watch-rec
        (lambda (symbol newval operation where)
          (setq vm-default-watch-events
                (cons (list symbol newval operation where)
                      vm-default-watch-events))))
  (add-variable-watcher 'vm-default-watch-target 'vm-default-watch-rec)
  (set-default-toplevel-value 'vm-default-watch-target 101)
  (nreverse vm-default-watch-events))
(symbol-value 'vm-default-watch-target)
