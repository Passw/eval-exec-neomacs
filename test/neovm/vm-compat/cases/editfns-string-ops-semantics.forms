; editfns.c — string/char operations (no buffer needed)
; char-to-string
(equal (char-to-string ?a) "a")
(equal (char-to-string ?A) "A")
(condition-case err (char-to-string "a") (error (car err)))

; string-to-char
(= (string-to-char "abc") ?a)
(= (string-to-char "") 0)
(= (string-to-char "A") ?A)
(condition-case err (string-to-char nil) (error (car err)))

; char-equal
(char-equal ?a ?a)
(not (char-equal ?a ?b))
(condition-case err (char-equal "a" ?a) (error (car err)))

; format — basic specifiers
(equal (format "%d" 42) "42")
(equal (format "%s" "hello") "hello")
(equal (format "%S" '(1 2)) "(1 2)")
(equal (format "%c" ?A) "A")

; format-message
(equal (format-message "%d" 42) "42")

; user-login-name
(stringp (user-login-name))
(> (length (user-login-name)) 0)

; user-real-login-name
(stringp (user-real-login-name))

; user-uid
(integerp (user-uid))
(>= (user-uid) 0)

; user-real-uid
(integerp (user-real-uid))

; group-gid
(integerp (group-gid))

; group-real-gid
(integerp (group-real-gid))

; system-name
(stringp (system-name))

; emacs-pid
(integerp (emacs-pid))
(> (emacs-pid) 0)

; byte-to-string — error paths
(condition-case err (byte-to-string 256) (error (car err)))
(condition-case err (byte-to-string -1) (error (car err)))

; string-to-multibyte
(stringp (string-to-multibyte "abc"))
(equal (string-to-multibyte "abc") "abc")

; compare-strings
(= (compare-strings "abc" 0 3 "abc" 0 3) t)
(< (compare-strings "abc" 0 3 "abd" 0 3) 0)
(> (compare-strings "abd" 0 3 "abc" 0 3) 0)

; string-equal
(string-equal "abc" "abc")
(not (string-equal "abc" "ABC"))

; string-lessp
(string-lessp "abc" "abd")
(not (string-lessp "abd" "abc"))
(not (string-lessp "abc" "abc"))
