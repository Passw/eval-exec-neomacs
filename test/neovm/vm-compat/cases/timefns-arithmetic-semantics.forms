; timefns.c — time arithmetic and conversion
; float-time — returns float
(floatp (float-time))
(> (float-time) 0.0)

; float-time with integer
(= (float-time 0) 0.0)
(= (float-time 100) 100.0)

; time-add with integers
(= (float-time (time-add 0 0)) 0.0)
(= (float-time (time-add 1 2)) 3.0)

; time-subtract with integers
(= (float-time (time-subtract 5 3)) 2.0)

; time-less-p with integers
(time-less-p 0 1)
(not (time-less-p 1 0))
(not (time-less-p 1 1))

; time-equal-p with integers
(time-equal-p 5 5)
(not (time-equal-p 5 6))

; time-convert with integer form
(integerp (time-convert nil 'integer))

; format-time-string
(stringp (format-time-string "%Y" 0 t))
(equal (format-time-string "%Y" 0 t) "1970")
(equal (format-time-string "%H:%M:%S" 0 t) "00:00:00")

; current-time-string
(stringp (current-time-string))
(> (length (current-time-string)) 10)

; decode-time returns a list
(listp (decode-time 0 t))
(>= (length (decode-time 0 t)) 9)
