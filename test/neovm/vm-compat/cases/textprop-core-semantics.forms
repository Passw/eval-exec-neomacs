; textprop.c â€” text property operations (buffer context)
; put-text-property / get-text-property
(with-temp-buffer
  (insert "hello")
  (put-text-property 1 6 'face 'bold)
  (get-text-property 1 'face))

; text-properties-at
(with-temp-buffer
  (insert "hello")
  (put-text-property 1 6 'face 'bold)
  (plist-get (text-properties-at 1) 'face))

; add-text-properties
(with-temp-buffer
  (insert "hello")
  (add-text-properties 1 6 '(face bold))
  (get-text-property 1 'face))

; remove-text-properties
(with-temp-buffer
  (insert "hello")
  (put-text-property 1 6 'face 'bold)
  (remove-text-properties 1 6 '(face nil))
  (get-text-property 1 'face))

; set-text-properties
(with-temp-buffer
  (insert "hello")
  (set-text-properties 1 6 '(face italic))
  (get-text-property 1 'face))

; next-property-change
(with-temp-buffer
  (insert "hello")
  (put-text-property 1 3 'face 'bold)
  (next-property-change 1))

; previous-property-change
(with-temp-buffer
  (insert "hello")
  (put-text-property 1 3 'face 'bold)
  (previous-property-change 4))

; next-single-property-change
(with-temp-buffer
  (insert "hello")
  (put-text-property 1 3 'face 'bold)
  (next-single-property-change 1 'face))

; text-property-any
(with-temp-buffer
  (insert "hello")
  (put-text-property 2 4 'face 'bold)
  (text-property-any 1 6 'face 'bold))

; text-property-not-all
(with-temp-buffer
  (insert "hello")
  (put-text-property 2 4 'face 'bold)
  (text-property-not-all 1 6 'face 'bold))
