; Region case commands should honor buffer-read-only variable semantics.
(with-temp-buffer
  (insert "FOO")
  (setq buffer-read-only t)
  (condition-case err
      (downcase-region (point-min) (point-max))
    (error (car err))))

(with-temp-buffer
  (insert "foo")
  (setq buffer-read-only t)
  (condition-case err
      (upcase-region (point-min) (point-max))
    (error (car err))))

(with-temp-buffer
  (insert "foo")
  (setq buffer-read-only t)
  (condition-case err
      (capitalize-region (point-min) (point-max))
    (error (car err))))

(with-temp-buffer
  (insert "foo bar")
  (setq buffer-read-only t)
  (condition-case err
      (upcase-initials-region (point-min) (point-max))
    (error (car err))))

; Word case commands currently no-op under buffer-read-only var in this subset.
(with-temp-buffer
  (insert "foo")
  (setq buffer-read-only t)
  (upcase-word 1)
  (buffer-string))
