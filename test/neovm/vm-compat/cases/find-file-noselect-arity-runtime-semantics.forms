; find-file-noselect accepts up to 4 args and rejects 5.
(let ((f (make-temp-file "ffn-arity-ok-"))
      buf)
  (unwind-protect
      (progn
        (setq buf (find-file-noselect f nil nil nil))
        (bufferp buf))
    (when (buffer-live-p buf)
      (kill-buffer buf))
    (ignore-errors (delete-file f))))

(let ((f (make-temp-file "ffn-arity-bad-"))
      buf)
  (unwind-protect
      (condition-case err
          (progn
            (setq buf (find-file-noselect f nil nil nil nil))
            'ok)
        (error (car err)))
    (when (buffer-live-p buf)
      (kill-buffer buf))
    (ignore-errors (delete-file f))))
