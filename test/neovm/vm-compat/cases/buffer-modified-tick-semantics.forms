(fboundp 'buffer-modified-tick)
(subrp (symbol-function 'buffer-modified-tick))
(subr-arity (symbol-function 'buffer-modified-tick))

(fboundp 'buffer-chars-modified-tick)
(subrp (symbol-function 'buffer-chars-modified-tick))
(subr-arity (symbol-function 'buffer-chars-modified-tick))

(with-temp-buffer
  (list 'ticks
        (buffer-modified-tick)
        (buffer-chars-modified-tick)
        (progn (insert "x") (buffer-modified-tick))
        (buffer-chars-modified-tick)
        (progn (set-buffer-modified-p nil) (buffer-modified-tick))
        (buffer-chars-modified-tick)
        (progn (delete-region (point-min) (point-max)) (buffer-modified-tick))
        (buffer-chars-modified-tick)))

(with-temp-buffer
  (list 'nil-arg
        (buffer-modified-tick nil)
        (buffer-chars-modified-tick nil)))

(let ((b (generate-new-buffer " *ticks-dead*")))
  (kill-buffer b)
  (list 'dead
        (buffer-modified-tick b)
        (buffer-chars-modified-tick b)))

(condition-case err
    (buffer-modified-tick 'x)
  (error (list 'mod-type (car err) (cdr err))))

(condition-case err
    (buffer-chars-modified-tick 'x)
  (error (list 'chars-type (car err) (cdr err))))

(condition-case err
    (buffer-modified-tick nil nil)
  (wrong-number-of-arguments (car err)))

(condition-case err
    (buffer-chars-modified-tick nil nil)
  (wrong-number-of-arguments (car err)))
