; syntax.c â€” syntax table operations
; syntax-table returns a char table
(char-table-p (syntax-table))

; standard-syntax-table
(char-table-p (standard-syntax-table))

; set-syntax-table / syntax-table roundtrip
(with-temp-buffer
  (let ((st (make-syntax-table)))
    (set-syntax-table st)
    (eq (syntax-table) st)))

; make-syntax-table creates a char table
(char-table-p (make-syntax-table))

; char-syntax
(= (char-syntax ?a) ?w)
(= (char-syntax ? ) ? )
(= (char-syntax ?\() ?\()
(= (char-syntax ?\)) ?\))

; syntax-class (used internally)
; skip-syntax-forward / skip-syntax-backward
(with-temp-buffer
  (insert "hello world")
  (goto-char 1)
  (skip-syntax-forward "w")
  (= (point) 6))
(with-temp-buffer
  (insert "hello world")
  (goto-char (point-max))
  (skip-syntax-backward "w")
  (= (point) 7))

; forward-word
(with-temp-buffer
  (insert "hello world")
  (goto-char 1)
  (forward-word 1)
  (= (point) 6))

; scan-sexps
(with-temp-buffer
  (insert "(hello)")
  (goto-char 1)
  (= (scan-sexps 1 1) 8))

; parse-partial-sexp returns a list
(with-temp-buffer
  (insert "(defun foo () t)")
  (listp (parse-partial-sexp 1 17)))
