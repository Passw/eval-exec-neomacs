; reindent-then-newline-and-indent should normalize split whitespace.
(list
 (with-temp-buffer
   (insert "  a")
   (goto-char (point-max))
   (list (condition-case err (reindent-then-newline-and-indent) (error err))
         (point)
         (string-to-list (buffer-string))))
 (with-temp-buffer
   (insert "a b")
   (goto-char 3)
   (list (condition-case err (reindent-then-newline-and-indent) (error err))
         (point)
         (string-to-list (buffer-string))))
 (with-temp-buffer
   (insert "  x")
   (goto-char 3)
   (list (condition-case err (reindent-then-newline-and-indent) (error err))
         (point)
         (string-to-list (buffer-string)))))
