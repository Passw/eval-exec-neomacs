; Focused contract coverage for string argument enforcement.
(condition-case err (lock-file nil) (error err))
(condition-case err (unlock-file nil) (error err))
(condition-case err (inotify-add-watch nil nil nil) (error err))

; Keep one successful watch lifecycle probe stable via booleans.
(condition-case err
    (let ((w (inotify-add-watch "/tmp" '(create) nil)))
      (list (consp w) (inotify-valid-p w) (inotify-rm-watch w) (inotify-valid-p w)))
  (error err))
