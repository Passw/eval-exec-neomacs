(condition-case err
    (funcall 'x-display-pixel-width (selected-window))
  (error (list (car err) (cadr err) (windowp (nth 2 err)))))
(condition-case err
    (apply 'x-display-pixel-width (list (selected-window)))
  (error (list (car err) (cadr err) (windowp (nth 2 err)))))
(condition-case err
    (funcall 'x-display-pixel-height (selected-window))
  (error (list (car err) (cadr err) (windowp (nth 2 err)))))
(condition-case err
    (apply 'x-display-pixel-height (list (selected-window)))
  (error (list (car err) (cadr err) (windowp (nth 2 err)))))
(condition-case err
    (funcall 'x-display-grayscale-p (selected-window))
  (error (list (car err) (cadr err) (windowp (nth 2 err)))))
(condition-case err
    (apply 'x-display-grayscale-p (list (selected-window)))
  (error (list (car err) (cadr err) (windowp (nth 2 err)))))

(condition-case err
    (funcall 'x-server-version (selected-frame))
  (error (list (car err) (cadr err))))
(condition-case err
    (apply 'x-server-version (list (selected-frame)))
  (error (list (car err) (cadr err))))
(condition-case err
    (funcall 'x-server-max-request-size (selected-frame))
  (error (list (car err) (cadr err))))
(condition-case err
    (apply 'x-server-max-request-size (list (selected-frame)))
  (error (list (car err) (cadr err))))

(funcall 'x-display-color-p (selected-frame))
(apply 'x-display-color-p (list (selected-frame)))
(condition-case err
    (funcall 'x-display-color-p (selected-window))
  (error (list (car err)
               (and (stringp (cadr err))
                    (not (null (string-match-p "get-device-terminal" (cadr err)))))
               (windowp (nth 2 err)))))
(condition-case err
    (apply 'x-display-color-p (list (selected-window)))
  (error (list (car err)
               (and (stringp (cadr err))
                    (not (null (string-match-p "get-device-terminal" (cadr err)))))
               (windowp (nth 2 err)))))

(condition-case err
    (funcall 'x-display-grayscale-p 1 2)
  (error err))
(condition-case err
    (apply 'x-display-grayscale-p '(1 2))
  (error err))
(condition-case err
    (funcall 'x-server-version 1 2)
  (error err))
(condition-case err
    (apply 'x-server-version '(1 2))
  (error err))
