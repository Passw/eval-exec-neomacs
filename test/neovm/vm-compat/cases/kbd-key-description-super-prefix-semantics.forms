; Super-modifier (`s-`) parsing/description parity for kbd and key helpers.

(fboundp 'kbd)
(fboundp 'key-description)
(fboundp 'single-key-description)
(fboundp 'key-valid-p)

(kbd "s-a")
(kbd "C-s-a")
(kbd "s-<f1>")
(kbd "C-s-<f1>")

(single-key-description (aref (kbd "s-a") 0))
(single-key-description (aref (kbd "C-s-a") 0))
(key-description (kbd "s-a"))
(key-description (kbd "C-s-a"))
(key-description (kbd "s-<f1>"))
(key-description (kbd "C-s-<f1>"))

(list (key-valid-p "s-a")
      (key-valid-p "C-s-a")
      (key-valid-p "s-<f1>")
      (key-valid-p "C-s-<f1>")
      (key-valid-p "s-")
      (key-valid-p "C-s-"))

(condition-case err
    (kbd "s-")
  (error (cadr err)))

(condition-case err
    (kbd "C-s-BS")
  (error (cadr err)))
