; Dead window designators in x-display/x-server optional query helpers should
; preserve compact handle payloads.
(defun neovm-vm-compat-make-dead-window ()
  (let ((w (split-window)))
    (delete-window w)
    w))

(let ((w (neovm-vm-compat-make-dead-window)))
  (condition-case err
      (x-display-backing-store w)
    (error
     (let ((msg (error-message-string err)))
       (list (car err)
             (not (null (string-match-p "frame-live-p" msg)))
             (not (null (string-match-p "#<window [0-9]+>" msg)))
             (not (null (string-match-p " on " msg))))))))

