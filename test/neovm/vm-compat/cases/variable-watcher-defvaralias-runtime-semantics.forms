(progn
  (setq vm-case-watch-events nil)
  (fset 'vm-case-watch-rec
        (lambda (symbol newval operation where)
          (setq vm-case-watch-events
                (cons (list symbol newval operation where) vm-case-watch-events))))
  (add-variable-watcher 'vm-case-watch-new 'vm-case-watch-rec)
  (defvaralias 'vm-case-watch-new 'vm-case-watch-old)
  (nreverse vm-case-watch-events))
(list
 (get-variable-watchers 'vm-case-watch-new)
 (get-variable-watchers 'vm-case-watch-old))
(progn
  (setq vm-case-watch-events nil)
  (add-variable-watcher 'vm-case-watch-bad 'vm-case-watch-rec)
  (setplist 'vm-case-watch-bad 1)
  (list
   (condition-case err
       (defvaralias 'vm-case-watch-bad 'vm-case-watch-target)
     (error err))
   (nreverse vm-case-watch-events)))
(progn
  (setq vm-case-watch-events nil)
  (defvaralias 'vm-case-watch-repoint 'vm-case-watch-old-a)
  (add-variable-watcher 'vm-case-watch-repoint 'vm-case-watch-rec)
  (defvaralias 'vm-case-watch-repoint 'vm-case-watch-old-b)
  (nreverse vm-case-watch-events))
(list
 (get-variable-watchers 'vm-case-watch-repoint)
 (get-variable-watchers 'vm-case-watch-old-a)
 (get-variable-watchers 'vm-case-watch-old-b))
