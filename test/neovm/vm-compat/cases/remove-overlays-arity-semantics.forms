; Lock in remove-overlays max-arity and core removal behavior.
(condition-case err (remove-overlays nil nil nil nil nil) (error err))

(with-temp-buffer
  (insert "abc")
  (let ((ov (make-overlay 1 2)))
    (remove-overlays)
    (overlay-buffer ov)))

(with-temp-buffer
  (insert "abc")
  (let ((ov (make-overlay 1 2)))
    (overlay-put ov 'face 'bold)
    (remove-overlays nil nil 'face 'bold)
    (overlay-buffer ov)))
