; Lock in float-time arity and time-value decoding behavior.
(fboundp 'float-time)
(numberp (float-time))
(numberp (float-time nil))
(>= (float-time) 0)

(= (float-time 42) 42.0)
(= (float-time 1.5) 1.5)
(= (float-time '(0 1)) 1.0)
(= (float-time '(0 1 500000)) 1.5)
(= (float-time '(0 1 500000 250000000000)) 1.75)

(let ((tm (current-time)))
  (numberp (float-time tm)))

(condition-case err (float-time nil nil) (error (car err)))
(condition-case err (float-time 'foo) (error (car err)))
(condition-case err (float-time '(1)) (error (car err)))
