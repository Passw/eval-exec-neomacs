; Word case mutators should honor `buffer-read-only` only when text changes.
(with-temp-buffer
  (insert "ABC")
  (goto-char 1)
  (setq buffer-read-only t)
  (condition-case err (downcase-word 1) (error (car err))))
(with-temp-buffer
  (insert "abc")
  (goto-char 1)
  (let ((buffer-read-only t))
    (condition-case err (upcase-word 1) (error (car err)))))
(with-temp-buffer
  (insert "abc")
  (goto-char 1)
  (setq buffer-read-only t)
  (condition-case err (capitalize-word 1) (error (car err))))
(with-temp-buffer
  (insert "abc")
  (goto-char 1)
  (setq buffer-read-only t)
  (condition-case err (downcase-word 0) (error (car err))))
(let ((orig (default-value 'buffer-read-only)))
  (unwind-protect
      (progn
        (setq-default buffer-read-only t)
        (with-temp-buffer
          (insert "ABC")
          (goto-char 1)
          (condition-case err (downcase-word 1) (error (car err)))))
    (setq-default buffer-read-only orig)))
