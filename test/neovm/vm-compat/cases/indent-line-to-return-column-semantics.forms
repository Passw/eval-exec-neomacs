; indent-line-to should return the requested column.
(list
 (with-temp-buffer
   (insert "  hi")
   (goto-char (point-min))
   (list (condition-case err (indent-line-to 4) (error err))
         (current-indentation)
         (buffer-string)))
 (with-temp-buffer
   (insert "    hi")
   (goto-char (point-min))
   (list (condition-case err (indent-line-to 4) (error err))
         (current-indentation)
         (buffer-string)))
 (with-temp-buffer
   (condition-case err (indent-line-to "x") (error err))))
