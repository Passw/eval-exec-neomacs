; file-size-human-readable flavor defaults, spacing/unit coercion, and errors.
(file-size-human-readable 0)
(file-size-human-readable 1536)
(file-size-human-readable 1572864)
(file-size-human-readable 1572864 'si)
(file-size-human-readable 1572864 'iec)
(file-size-human-readable 1572864 'foo)
(file-size-human-readable -1536)
(file-size-human-readable -1536 'iec)
(file-size-human-readable 1536 nil 1 "B")
(condition-case err
    (file-size-human-readable 1 nil nil 1)
  (error (list (car err) (cadr err) (equal (nth 2 err) 1))))
(condition-case err
    (file-size-human-readable 1 nil nil '("B"))
  (error (list (car err) (cadr err) (equal (nth 2 err) "B"))))
(condition-case err
    (file-size-human-readable "x")
  (error (car err)))
