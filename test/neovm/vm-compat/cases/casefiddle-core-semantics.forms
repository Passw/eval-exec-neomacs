; casefiddle.c â€” case conversion
; upcase / downcase on chars
(= (upcase ?a) ?A)
(= (upcase ?A) ?A)
(= (downcase ?A) ?a)
(= (downcase ?a) ?a)

; upcase / downcase on strings
(equal (upcase "hello") "HELLO")
(equal (downcase "HELLO") "hello")
(equal (upcase "") "")
(equal (downcase "") "")

; capitalize
(equal (capitalize "hello world") "Hello World")
(equal (capitalize "HELLO") "Hello")
(equal (capitalize "") "")

; upcase-initials
(equal (upcase-initials "hello world") "Hello World")
(equal (upcase-initials "hello") "Hello")

; upcase-region / downcase-region
(with-temp-buffer
  (insert "hello")
  (upcase-region 1 6)
  (buffer-string))
(with-temp-buffer
  (insert "HELLO")
  (downcase-region 1 6)
  (buffer-string))

; capitalize-region
(with-temp-buffer
  (insert "hello world")
  (capitalize-region 1 12)
  (buffer-string))

; upcase-initials-region
(with-temp-buffer
  (insert "hello world")
  (upcase-initials-region 1 12)
  (buffer-string))

; error paths
(condition-case err (upcase nil) (error (car err)))
(condition-case err (downcase nil) (error (car err)))
