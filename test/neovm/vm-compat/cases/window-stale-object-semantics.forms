; Deleted windows remain window objects but are no longer live.
(let ((w (split-window)))
  (delete-window w)
  (list (windowp w) (window-live-p w)))

; Accessing a deleted window's buffer returns nil.
(let ((w (split-window)))
  (delete-window w)
  (condition-case err (window-buffer w) (error (car err))))

; Deleted windows are rejected by live-window consumers.
(let ((w (split-window)))
  (delete-window w)
  (condition-case err (window-frame w) (error (car err))))
(let ((w (split-window)))
  (delete-window w)
  (condition-case err (select-window w) (error (car err))))
(let ((w (split-window)))
  (delete-window w)
  (condition-case err (set-window-buffer w (current-buffer)) (error (car err))))
