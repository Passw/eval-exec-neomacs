; search.c â€” search operations
; string-match
(= (string-match "lo" "hello") 3)
(eq (string-match "xyz" "hello") nil)
(= (string-match "^h" "hello") 0)
(= (string-match "o$" "hello") 4)

; match-beginning / match-end after string-match
(progn (string-match "l+" "hello") (match-beginning 0))
(progn (string-match "l+" "hello") (match-end 0))

; match-string after string-match with group
(progn (string-match "\\(l+\\)" "hello") (match-string 1 "hello"))

; replace-match
(let ((s "hello world"))
  (string-match "world" s)
  (replace-match "there" nil nil s))

; looking-at
(with-temp-buffer
  (insert "hello")
  (goto-char 1)
  (looking-at "hel"))
(with-temp-buffer
  (insert "hello")
  (goto-char 1)
  (not (looking-at "xyz")))

; search-forward / search-backward
(with-temp-buffer
  (insert "hello world hello")
  (goto-char 1)
  (search-forward "world" nil t)
  (= (point) 12))
(with-temp-buffer
  (insert "hello world hello")
  (goto-char (point-max))
  (search-backward "hello" nil t)
  (= (point) 13))

; re-search-forward
(with-temp-buffer
  (insert "abc 123 def")
  (goto-char 1)
  (re-search-forward "[0-9]+" nil t)
  (match-string 0))

; regexp-quote
(equal (regexp-quote "foo.bar") "foo\\.bar")
(equal (regexp-quote "a*b") "a\\*b")
(equal (regexp-quote "simple") "simple")
