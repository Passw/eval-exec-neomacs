; coding.c â€” encoding/decoding
; coding-system-p
(coding-system-p 'utf-8)
(coding-system-p 'undecided)
(not (coding-system-p 'nonexistent-coding-99))
(not (coding-system-p 42))
(not (coding-system-p nil))

; check-coding-system
(eq (check-coding-system 'utf-8) 'utf-8)
(condition-case err (check-coding-system 'nonexistent-99) (error (car err)))

; coding-system-aliases
(listp (coding-system-aliases 'utf-8))

; coding-system-eol-type
(let ((eol (coding-system-eol-type 'utf-8)))
  (or (integerp eol) (vectorp eol)))

; detect-coding-string
(listp (detect-coding-string "hello"))

; encode-coding-string / decode-coding-string
(stringp (encode-coding-string "hello" 'utf-8))
(equal (decode-coding-string (encode-coding-string "hello" 'utf-8) 'utf-8) "hello")

; set-keyboard-coding-system-internal (nil disables)
(progn (set-keyboard-coding-system-internal nil) t)

; set-terminal-coding-system-internal (nil disables)
(progn (set-terminal-coding-system-internal nil) t)
